<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="av" 
    x:Name="devWin" 
    x:Class="GNPX_space.ExtendResultWin"
     
    Title="DevelopWin" Background="{x:Null}" WindowStyle="None" WindowStartupLocation="Manual" 
    ResizeMode="CanResizeWithGrip" FontFamily="MS Mincho" Height="600" av:DesignWidth="800" 
    VerticalAlignment="Top" >

    <Grid Background="#FF16182C" Margin="0,0,0,2" >
        <Label Content="GNPX 2025" FontFamily="MS Mincho" FontSize="36" Foreground="#FFFEFFFF" HorizontalAlignment="Left" Margin="17,11,0,0" x:Name="GNPXGNPX" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic"/>
        <Button x:Name="btn_devWinClose"
                Content="close" FontFamily="MS Gothic" FontSize="12" Foreground="White" 
                Height="25" HorizontalAlignment="Right" Margin="0,10,16,0"  VerticalAlignment="Top" 
                Width="56" Click="btn_devWinClose_Click" Style="{Binding}">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA575757" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <CheckBox x:Name="chb_LinkedMove" Content="linked move" HorizontalAlignment="Right" Margin="0,38,16,0" VerticalAlignment="Top" Foreground="White" IsChecked="True" Checked="chb_LinkedMove_Checked" Unchecked="chb_LinkedMove_Checked" VerticalContentAlignment="Bottom"/>
        <ScrollViewer HorizontalAlignment="Stretch" Margin="10,63,10,10" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="ExtRes" TextWrapping="Wrap" Text="TextBox" Background="#FF08070A" Foreground="White" FontFamily="MS Gothic" FontSize="13.333"/>
        </ScrollViewer>
    </Grid>
</Window>