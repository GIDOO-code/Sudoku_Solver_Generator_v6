<Window x:Name="GNPXwin" 
        x:Class="GNPX_space.GNPX_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended" 
        xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:properties="clr-namespace:GNPX_space.Properties"
        xmlns:app="clr-namespace:GNPX_space"
        mc:Ignorable="d"    
        
        xmlns:GIDOO_space="clr-namespace:GIDOO_space"     
        
        Title="GNPXv6" Background="{x:Null}" WindowStyle="None"
        ShowActivated="True" ResizeMode="NoResize" Width="972" Height="535"
        WindowStartupLocation="Manual" BorderThickness="3" BorderBrush="#FF2D20EF"
        
        Loaded="Window_Loaded" 
        Unloaded="Window_Unloaded" 
        MouseDown="Window_MouseDown"

        LocationChanged="GNPXwin_LocationChanged" >
    <!-- MouseMove="Window_MouseMove" -->

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DataGridStyle.xaml"></ResourceDictionary>
                <!-- <ResourceDictionary Source="/Styles/ComboBoxStyle.xaml"></ResourceDictionary> -->
                <ResourceDictionary Source="/Styles/ListBoxStyle1.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Styles/TabControlStyle.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Styles/TextBlockStyle.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>

                <ResourceDictionary>
                    <Style TargetType="{x:Type ComboBox}">
                        <Style.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="true">
                                <Setter Property="Background" Value="Navy"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="GNPXv6" PreviewKeyDown="GNPXv6_PreviewKeyDown" VerticalAlignment="Top" Height="530" >

        <Image x:Name="GNPXv6_main" Source="/0_ApplicationMain/images/01-spitzer-omeganebula.jpg"  Opacity="0.3" Stretch="Fill" />
        <Label x:Name="GNPXGNPX2" 
                       Content="GNPXv5.8 2025" FontFamily="MS Mincho" FontSize="36" Foreground="#FFFEFFFF" HorizontalAlignment="Left"
                       Margin="10,10,0,0" VerticalAlignment="Top" Height="41" FontWeight="Bold" />

        <Button x:Name="appExit" Click="appExit_Click"
                Content="Exit" FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="29" HorizontalAlignment="Right" 
                Margin="0,5,10,0" VerticalAlignment="Top" Width="56"  Style="{Binding}" Grid.RowSpan="1" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA575757" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Label x:Name="lbl_ShortMessage" 
               Content="lbl_ShortMessage" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="#FF2D0F0F" 
               Visibility="Visible" Panel.ZIndex="6" Margin="804,55,0,0" FontFamily="MS Gothic" Background="{x:Null}" FontSize="16" />


        <Grid x:Name="GNPXv6_L" HorizontalAlignment="Left" Width="380" >


            <app:UC_PB_GBoard x:Name="G60_PB" 
                              MouseUp="G60_PB_MouseUp" MouseEnter="G60_PB_MouseEnter" 
                              HorizontalAlignment="Left" Margin="18,0,0,0" VerticalAlignment="Bottom" Height="400" Panel.ZIndex="5"  />

            <Label x:Name="lbl_G60Puzzle" 
                    Content="{Binding Resources.lblPuzzle, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    FontFamily="MS Gothic" Foreground="#FFFEFFFF" HorizontalAlignment="Left" Margin="15,60,0,0" 
                    VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Right"  />
            <TextBox x:Name="txt_G60PuzzleNo" PreviewKeyDown="txt_G60PuzzleNo_PreviewKeyDown"
                     Text="0" ToolTip="Jump directly to" 
                     Background="#FF0A0A24" FontFamily="MS Gothic" FontSize="14" Foreground="White" Height="22" Width="80" 
                     HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="63,58,0,0" 
                     TextAlignment="Center" VerticalContentAlignment="Center"  />
            <Label x:Name="lbl_G60PuzzlesCount"
                    FontFamily="MS Gothic" Foreground="#FFFEFFFF" HorizontalAlignment="Left" Margin="145,60,0,0" 
                    VerticalAlignment="Top" Content="/ 00000000" Width="80"  />

            <RepeatButton  x:Name="btn_G60ProbPre" Click="btn_G60ProbPre_Click" 
                    Content="{Binding Resources.btn_ProbPre, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    Height="22" HorizontalAlignment="Left" Margin="252,60,0,0" VerticalAlignment="Top" Width="37" 
                    Foreground="White" BorderBrush="#FF2E9BDE" IsEnabled="False" >
                <RepeatButton.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.8" />
                        <GradientStop Color="#FF7F7E85" Offset="0.05" />
                        <GradientStop Color="#EA575757" Offset="0.55" />
                    </LinearGradientBrush>
                </RepeatButton.Background>
            </RepeatButton>

            <RepeatButton x:Name="btn_G60ProbNxt" Click="btn_G60ProbNxt_Click"
                    Content="{Binding Resources.btn_ProbNxt, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    Height="22" HorizontalAlignment="Left" Margin="292,60,0,0" 
                    VerticalAlignment="Top" Width="37" Foreground="White" BorderBrush="#FF2E9BDE" IsEnabled="False" >
                <RepeatButton.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.8" />
                        <GradientStop Color="#FF7F7E85" Offset="0.05" />
                        <GradientStop Color="#EA575757" Offset="0.55" />
                    </LinearGradientBrush>
                </RepeatButton.Background>
            </RepeatButton>

            <CheckBox x:Name="chb_MinDifficulty" 
                Content="Minimum Difficulty"
                FontFamily="MS Gothic" Foreground="#FFFEFFFF" HorizontalAlignment="Left" Margin="44,83,0,0" 
                VerticalAlignment="Top" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" FontSize="12"  />
            <GIDOO_space:NumericUpDown x:Name="nUD_MinDifficulty" 
                                       HorizontalAlignment="Left" Margin="178,81,0,0" VerticalAlignment="Top" Width="45" Height="20" ValueChanged="nUD_MinDifficulty_ValueChanged"/>
            <TextBox x:Name="txt_G60PuzzleName" Text="........." Background="#FF0A0A24" Width="340" Margin="0,106,0,0" 
                    FontFamily="MS Gothic" FontSize="14" Foreground="White" 
                    HorizontalAlignment="Center"   VerticalAlignment="Top" VerticalContentAlignment="Center" 
                    TextChanged="txt_G60PuzzleName_TextChanged" ToolTip="Puzzle name, optionally rewritable" TextWrapping="Wrap" />


            <Button x:Name="btn_CopyBitMap" Click="btn_CopyBitMap_Click"
                FontFamily="MS Gothic" Foreground="White" Height="20" Margin="160,0,45,10" Style="{Binding}" VerticalAlignment="Bottom" FontSize="12" Content="Bitmap Copy/Save" HorizontalAlignment="Left" Width="109.6" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1" />
                        <GradientStop Color="#EA0E3417" Offset="0.5" />
                        <GradientStop Color="#FF7F7E85" Offset="0.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <CheckBox x:Name="chbx_ShowCandidate" Checked="chbx_ShowCandidate_Checked" Unchecked="chbx_ShowCandidate_Checked"
                      Content="candidate" Foreground="White" Margin="250,0,50,10" Background="White"  IsChecked="True" HorizontalAlignment="Right" 
                      VerticalAlignment="Bottom" FontFamily="MS Gothic" VerticalContentAlignment="Center" Height="15" Grid.Column="1" FontSize="10"  />
            <Button x:Name="btn_FinalState" Click="btn_FinalState_Click"
                Content="Final State" FontFamily="MS Gothic" FontSize="12"
                Margin="250,86,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90"  Height="16" Background="#FF4679BC" Foreground="#FFF3F3F3" FontStyle="Italic" />

        </Grid>



        <Grid x:Name="GNPXv6_R" Margin="381,0,0,0" HorizontalAlignment="Right" Width="585" >
            <Button x:Name="btnP_File" Click="btn_Page_Clicked"
                    Margin="18,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
                    Content="{Binding Resources.tabAFile, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    Foreground="White" BorderBrush="#FF160F7A" FontSize="12" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9EA8ED" Offset="1"/>
                        <GradientStop Color="#FF9EA8ED" Offset="0"/>
                        <GradientStop Color="#FF1B2462" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnP_Solve" Click="btn_Page_Clicked"
                        Margin="80,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
                        Content="{Binding Resources.tabASolve, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                        Foreground="White" BorderBrush="#FF160F7A" FontSize="12"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9EA8ED" Offset="1"/>
                        <GradientStop Color="#FF9EA8ED" Offset="0"/>
                        <GradientStop Color="#FF1B2462" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnP_Create" Click="btn_Page_Clicked"
                    Margin="142,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
                    Content="{Binding Resources.tabACreate, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    Foreground="White" BorderBrush="#FF160F7A" FontSize="12"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9EA8ED" Offset="1"/>
                        <GradientStop Color="#FF9EA8ED" Offset="0"/>
                        <GradientStop Color="#FF1B2462" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnP_Option" Click="btn_Page_Clicked"
                    Margin="204,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
                    Content="{Binding Resources.tabAOption, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    Foreground="White" BorderBrush="#FF160F7A" FontSize="12"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9EA8ED" Offset="1"/>
                        <GradientStop Color="#FF9EA8ED" Offset="0"/>
                        <GradientStop Color="#FF1B2462" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnP_Transform" Click="btn_Page_Clicked"
                    Margin="266,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
                    Content="{Binding Resources.tabATransform, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    Foreground="White" BorderBrush="#FF160F7A" FontSize="12"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9EA8ED" Offset="1"/>
                        <GradientStop Color="#FF9EA8ED" Offset="0"/>
                        <GradientStop Color="#FF1B2462" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnP_HomePage" Click="btn_Page_Clicked"
                    Margin="328,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
                    Content="{Binding Resources.btnP_HomePage, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                    Foreground="White" BorderBrush="#FF160F7A" FontSize="12"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9EA8ED" Offset="1"/>
                        <GradientStop Color="#FF9EA8ED" Offset="0"/>
                        <GradientStop Color="#FF1B2462" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- MouseDoubleClick="btnP_Extensions_MouseDoubleClick"   Click="btnP_Extensions_MouseDoubleClick" -->
            <Button x:Name="btnP_Extensions" MouseDoubleClick="btnP_Extensions_MouseDoubleClick" 
                    Content="Extensions" Margin="400,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="24"
                    Foreground="White" BorderBrush="#FF160F7A" FontSize="12" Opacity="0.05" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF429D3C" Offset="1"/>
                        <GradientStop Color="#FFA5D6A2" Offset="0"/>
                        <GradientStop Color="#FF123507" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Border Margin="5,43,10,10" BorderThickness="1" BorderBrush="Blue">
                <Grid>
                    <Frame x:Name="frame_GNPX_Func"  NavigationUIVisibility="Hidden" />
                </Grid>
            </Border>

        </Grid>

    </Grid>

</Window>