        <Button x:Name="btn_Initial" Click="btn_Initial_Click" 
                Content="Set Initial State" FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="22" 
                HorizontalAlignment="Left" Margin="30,227,0,0" VerticalAlignment="Top" Width="138"  Grid.Column="1" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3A3F85" Offset="0.497" />
                    <GradientStop Color="#FF7F7E85" Offset="0" />
                    <GradientStop Color="#EA575757" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <CheckBox x:Name="chb_SortByDifficulty" Grid.Column="1" Content="Sort by Difficulty" HorizontalAlignment="Left" Margin="48,251,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>

        <Label x:Name="lbl_Methods" Grid.Column="1" Content="path / file :" HorizontalAlignment="Left" 
               Margin="12,288,0,0" Foreground="White" FontFamily="MS Gothic" FontSize="12" Height="23" VerticalAlignment="Top"/>
        <TextBox x:Name="txtB_SDK_Methods" Grid.Column="1" Margin="7,307,6,0" 
                 TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="87" 
                 Background="#FF101529" Foreground="White" FontSize="12"/>

    </Grid>

</Page>
