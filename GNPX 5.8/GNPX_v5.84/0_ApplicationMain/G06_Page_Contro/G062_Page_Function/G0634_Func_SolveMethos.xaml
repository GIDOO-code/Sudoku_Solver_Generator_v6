<Page x:Class="GNPX_space.Func_SolveMethod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:app="clr-namespace:GNPX_space"
      xmlns:local="clr-namespace:GNPX_space"
    
      xmlns:GIDOO_space="clr-namespace:GIDOO_space"   
      mc:Ignorable="d"
      Title="Page1" 
      Loaded="Page_Loaded" Unloaded="Page_Unloaded" Height="400" Width="500">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>



    <Grid Width="495">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="313*"/>
            <ColumnDefinition Width="259*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lbl_MethodApply"
               Content="{Binding Resources.lbl_MethodApply, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
               FontSize="12" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,4,34,0" VerticalAlignment="Top" Width="226" FontFamily="MS Gothic" />


        <ListBox x:Name="listBox_GMethod00A" Margin="10,25,10,10" 
                 Background="{x:Null}" Foreground="#FF707070" FontFamily="MS Gothic" FontSize="12" BorderThickness="1" >
            <ListBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF24ADAD"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ListBox.BorderBrush>

            <ListBox.ItemTemplate>
                <HierarchicalDataTemplate>
                    <CheckBox Content="{Binding NameM}" 
                              IsChecked="{Binding IsChecked}" 
                              Foreground="{Binding brsh}"
                              IsEnabled="true"
                              VerticalContentAlignment="Center" 
                              Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                </HierarchicalDataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <Label x:Name="lbl_GeneralLogic" 
               Content="GeneralLogic : available"
               Foreground="#FFB7B84C" Height="22" Margin="17,28,0,0" FontSize="12" 
               HorizontalAlignment="Left" VerticalAlignment="Top" Width="196" Grid.Column="1" FontFamily="MS Gothic" />

        <Label x:Name="lbl_Order" Grid.Column="1" Content="Order :" HorizontalAlignment="Left" Margin="36,90,0,0" VerticalAlignment="Top" Foreground="#FFFD7718" RenderTransformOrigin="0.967,0.699" FontSize="12" FontFamily="MS Gothic"/>

        <RepeatButton x:Name="rbtn_GMethod01U" Click="rbtn_GMethod01U_Click"
                      Content="▲" FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="26" HorizontalAlignment="Left" Margin="86,90,0,0" 
                      VerticalAlignment="Top" Width="25"  Grid.Column="1" >
            <RepeatButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA575757" Offset="0.55" />
                </LinearGradientBrush>
            </RepeatButton.Background>
        </RepeatButton>
        <RepeatButton x:Name="rbtn_GMethod01D" Click="rbtn_GMethod01D_Click" 
                      Content="▼" FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="26" HorizontalAlignment="Left" Margin="122,90,0,0" 
                      VerticalAlignment="Top" Width="25" Grid.Column="1">
            <RepeatButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA575757" Offset="0.55" />
                </LinearGradientBrush>
            </RepeatButton.Background>
        </RepeatButton>

        <Label x:Name="lbl_Difficalty" Grid.Column="1" Content="Difficulty :" HorizontalAlignment="Left" Margin="4,132,0,0" VerticalAlignment="Top" Foreground="#FF33FD30" FontSize="12" FontFamily="MS Gothic"/>

        <GIDOO_space:NumericUpDown x:Name="nud_Difficulty" ValueChanged="nud_Difficulty_ValueChanged"
                                   Grid.Column="1" HorizontalAlignment="Left" Margin="86,132,0,0" VerticalAlignment="Top" Width="61" 
                                   MaxValue="15" FontSize="12" Height="24" />

        <Label x:Name="lbl_Recommend" 
               Grid.Column="1" Content="Recommend :" HorizontalAlignment="Left" Margin="9,170,0,0" VerticalAlignment="Top" 
               Foreground="Cyan" FontSize="12" Background="{x:Null}" FontFamily="MS Gothic"/>

        <GIDOO_space:NumericUpDown x:Name="nud_Recommend" ValueChanged="nud_Recommend_ValueChanged"
                                   Grid.Column="1" HorizontalAlignment="Left" Margin="86,170,0,0" VerticalAlignment="Top" Width="61" 
                                   MaxValue="15" FontSize="12" Height="24" />
