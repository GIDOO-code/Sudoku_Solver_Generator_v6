<Page x:Class="GNPX_space.Func_CreateAll"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

      mc:Ignorable="d" 
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:app="clr-namespace:GNPX_space"
      xmlns:local="clr-namespace:GNPX_space"
      xmlns:GIDOO_space="clr-namespace:GIDOO_space"    
      
      d:DesignWidth="572" d:DesignHeight="428"
      Title="Page1" 
      Loaded="Page_Loaded" Unloaded="Page_Unloaded" HorizontalAlignment="Left">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--
                <ResourceDictionary Source="../../../Styles/ListBoxStyle1.xaml"></ResourceDictionary>
                <ResourceDictionary Source="../../../Styles/ComboBoxStyle.xaml"></ResourceDictionary>
            -->
                <ResourceDictionary Source="../../../Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid HorizontalAlignment="Left" Width="572" >
        <Rectangle HorizontalAlignment="Left" Margin="241,10,0,10" Stroke="#FFC8D7FF" Width="2" Fill="#FF06070C"/>

        <Label x:Name="lbl_ShortMessage" 
               Content="lbl_ShortMessage" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="#FF2D0F0F" 
               Visibility="Visible" Panel.ZIndex="6" Margin="804,55,0,0" FontFamily="MS Gothic" Background="{x:Null}" FontSize="16" />

        <local:G611_UC_SBoard x:Name="UC_SBoard" 
                            HorizontalAlignment="Left" Margin="0,10,10,10" VerticalAlignment="Top" Height="417" Width="220"/>


        <Grid Width="300" HorizontalAlignment="Left" Margin="250,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="94*"/>
                <ColumnDefinition Width="151*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Create using T/E Engin                    " 
                   HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="MS Gothic" Background="{x:Null}" Foreground="#FF63EFFD" Margin="25,0,0,0" Grid.ColumnSpan="2" FontSize="18"/>


            <Label x:Name="lbl_NoOfPuzzlesTitle" 
                   Content="puzzles"                                
                   FontFamily="MS Gothic" FontSize="12" FontWeight="Normal" Foreground="White" Margin="0,28,7,0" 
                   VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="52" />

            <TextBox x:Name="txb_NoOfPuzzles" Width="71" Height="20" HorizontalAlignment="Right" Margin="0,29,87,0"
                     Background="#FF1F1F50" FontFamily="MS Gothic" Foreground="White" IsReadOnly="True"
                     Text="0000" TextAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" BorderBrush="#FFD1D8ED" Grid.ColumnSpan="2"/>
            <!--
            <TextBox x:Name="No_PuzzlesToCreate" Width="60" Height="20" HorizontalAlignment="Right" Margin="0,8,16,0"
                     Background="#FF1F1F50" FontFamily="MS Gothic" Foreground="White"
                     Text="5" TextAlignment="Center" VerticalAlignment="Top" DataContext="{Binding}" VerticalContentAlignment="Center" Grid.Column="1" BorderBrush="#FFD1D8ED"/>
-->
            <TextBlock x:Name="txbk_CreateAllPuzzle" Margin="9,54,10,0" TextWrapping="Wrap" Text="Commentary" VerticalAlignment="Top" Height="144" 
                       Foreground="#FF63EFFD" FontSize="12" Grid.ColumnSpan="2"/>

            <Button x:Name="btn_CreateAllPuzzle" Click="btn_CreateAllPuzzle_Click"
                    Content="全解生成"
                    FontFamily="MS Gothic" FontSize="12" Foreground="White" HorizontalAlignment="Left" Width="138" 
                    Height="25" VerticalAlignment="Top" Margin="8,207,0,0" BorderBrush="{x:Null}" 
                    RenderTransformOrigin="0.211,0.538" Grid.Column="1" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF606060" Offset="0" />
                        <GradientStop Color="#FF16290F" Offset="0.5" />
                        <GradientStop Color="#FF606060" Offset="0.994" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <ComboBox x:Name="comb_partialsearch" 
                      HorizontalAlignment="Right" Margin="0,208,12,0" VerticalAlignment="Top" Width="56" Height="22" 
                      SelectedIndex="2" HorizontalContentAlignment="Center" FontFamily="MS Gothic"/>

            <Label x:Name="lbl_LapTimeTS3"
                   Content="{Binding Resources.lbl_LapTimeTS3, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
                   FontFamily="MS Gothic" FontSize="12" FontWeight="Normal" Foreground="White" Height="22" HorizontalAlignment="Right" Margin="0,233,8,0" VerticalAlignment="Top" Width="64" />
            <TextBlock x:Name="txb_EpapsedTimeTS3" Margin="108,240,53,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="16" FontSize="12" Foreground="White" FontFamily="MS Gothic" Grid.ColumnSpan="2"/>


            <Label x:Name="lbl_CreateAll_Message1"
                    Content="....." FontFamily="MS Gothic" FontSize="12" Margin="20,255,2,0" VerticalAlignment="Top" 
                    Height="22" Background="{x:Null}" Foreground="#FFDBE9D6" Grid.ColumnSpan="2" />


            <Label x:Name="lbl_CreateAll_Message2"
                    FontFamily="MS Gothic" FontSize="12" FontWeight="Normal" Foreground="#FFDBE9D6" Height="22" Margin="20,277,2,0" 
                    VerticalAlignment="Top" Content="..." Grid.ColumnSpan="2" />

            <Label x:Name="lbl_CreateAll_Message3"
                    Content="....." FontFamily="MS Gothic" FontSize="12" Margin="20,299,2,0" VerticalAlignment="Top" 
                    Height="22" Background="{x:Null}" Foreground="#FFDBE9D6" Grid.ColumnSpan="2" />

            <Label x:Name="lbl_ResourceMemory"
                    Content="....." FontFamily="MS Gothic" FontSize="12" Margin="20,321,2,0" VerticalAlignment="Top" 
                    Height="22" Background="#FF14192F" Foreground="#FFDEB37D" Grid.ColumnSpan="2" />
            <Label x:Name="lbl_RandomizeAllPuzzle"
                Content="Randomize Sudoku Puzzle files in a folder."
                FontFamily="MS Gothic" FontSize="12" FontWeight="Normal" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="20,355,-4,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="264" />
            <Button x:Name="btn_RandomizeAllPuzzle" Click="btn_RandomizeAllPuzzle_Click"
                Content="Randmize"
                FontFamily="MS Gothic" FontSize="12" Foreground="White" HorizontalAlignment="Left" Width="138" 
                Height="25" VerticalAlignment="Top" Margin="65,375,0,0" BorderBrush="{x:Null}" 
                RenderTransformOrigin="0.211,0.538" Grid.ColumnSpan="2" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF606060" Offset="0" />
                        <GradientStop Color="#FF0F1629" Offset="0.5" />
                        <GradientStop Color="#FF606060" Offset="0.994" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </Grid>


    </Grid>

</Page>
