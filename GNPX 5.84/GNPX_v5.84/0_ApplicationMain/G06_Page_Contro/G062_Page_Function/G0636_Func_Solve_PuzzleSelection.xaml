<Page x:Class="GNPX_space.Func_SelectPuzzle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:local="clr-namespace:GNPX_space"   
      xmlns:GIDOO_space="clr-namespace:GIDOO_space" 
      xmlns:app="clr-namespace:GNPX_space"
      mc:Ignorable="d"   

      d:DesignWidth="540" d:DesignHeight="400"
      Title="Page1" 
      Loaded="Page_Loaded" Unloaded="Page_Unloaded" >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="349*"/>
            <ColumnDefinition Width="191*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FF3A3948" Offset="0" />
                <GradientStop Color="#FF65646F" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Label x:Name="Lbl_SolveMarking"
                   Content="Puzzle Selection (only PU)" FontWeight="Bold" HorizontalAlignment="Left"
                   Margin="29,2,0,0" VerticalAlignment="Top" FontFamily="MS Gothic" Background="{x:Null}" Foreground="#FFE0E7F1" Height="24" Width="198" />
        <Label Content="Marking puzzles using a specified Algorithm"
                   HorizontalAlignment="Left" Margin="34,18,0,0" VerticalAlignment="Top" Foreground="#FF9DAAEB" FontFamily="MS Gothic" Height="22"/>

        <Grid x:Name="grd_PuzzleSel_R" Width="340" HorizontalAlignment="Center" Margin="0,40,0,0">

            <Label x:Name="lbl_Selected_Method" Content="Specify the Algorithm" HorizontalAlignment="Left" 
                Margin="14,1,0,0" VerticalAlignment="Top" Foreground="#FFFF9C35" Background="{x:Null}" Height="22" FontFamily="MS Gothic" VerticalContentAlignment="Bottom"/>



            <ListBox x:Name="lsB_GMethod00B" Margin="5,20,0,5"
                 ItemsSource="{Binding testCBL}" Background="#FF0B0F1B" Foreground="#FF707070"
                 FontFamily="MS Gothic" FontSize="12" RenderTransformOrigin="0.5,0.5" BorderBrush="#FFB4B4B4" HorizontalAlignment="Left" Width="243">

                <ListBox.ItemTemplate>
                    <HierarchicalDataTemplate>
                        <CheckBox 
                            IsEnabled="true" VerticalContentAlignment="Center" 
                            Content="{Binding NameM}" 
                            Foreground="{Binding brshM}"
                            IsChecked="{Binding markA_dev}"
                            Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                    </HierarchicalDataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Content="Difficulty" HorizontalAlignment="Left" 
                Margin="251,24,0,0" VerticalAlignment="Top" Foreground="#FF4CFB51" Background="{x:Null}" FontSize="12" Height="24" Width="90" FontFamily="MS Gothic"/>
            <GIDOO_space:NumericUpDown x:Name="numUD_DifficultyLevel" ValueChanged="numUD_DifficultyLevel_ValueChanged"
                                       HorizontalAlignment="Right" Margin="0,44,7,0" VerticalAlignment="Top" Width="74" Height="20" FontFamily="MS Gothic"/>
            <Label Content="Sort by" HorizontalAlignment="Right" Margin="0,79,37,0" VerticalAlignment="Top" Foreground="White" FontSize="12" FontFamily="MS Gothic"/>

            <Button x:Name="btn_SortByID"  Click="btn_SortByID_Click"
                     FontSize="12" Foreground="White" Height="20" HorizontalAlignment="Right" Margin="0,102,10,0"   
                     VerticalAlignment="Top" Width="74" Content="ID" HorizontalContentAlignment="Left" FontFamily="MS Gothic">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF777777" Offset="0" />
                        <GradientStop Color="#FF777777" Offset="1" />
                        <GradientStop Color="#FF252C6B" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="btn_SortByName" Click="btn_SortByName_Click"
                     FontSize="12" Foreground="White" Height="20" HorizontalContentAlignment="Left" Margin="0,126,10,0"
                     VerticalAlignment="Top" Width="74"  Content="Name" HorizontalAlignment="Right" FontFamily="MS Gothic" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF777777" Offset="0" />
                        <GradientStop Color="#FF777777" Offset="1" />
                        <GradientStop Color="#FF252C6B" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btn_SortByDifficulty" Click="btn_SortByDifficulty_Click"
                    FontSize="12" Foreground="White" Height="20" HorizontalContentAlignment="Left" Margin="0,150,10,0" 
                    VerticalAlignment="Top" Width="74"  Content="Difficulty" HorizontalAlignment="Right" FontFamily="MS Gothic"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF777777" Offset="0" />
                        <GradientStop Color="#FF777777" Offset="1" />
                        <GradientStop Color="#FF252C6B" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="btn_SortByMarked" Click="btn_SortByMarked_Click"
                     FontSize="12" Foreground="White" Height="20" HorizontalContentAlignment="Left" Margin="0,174,10,0" 
                     VerticalAlignment="Top" Width="74"  Content="Marked" HorizontalAlignment="Right" FontFamily="MS Gothic"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF777777" Offset="0" />
                        <GradientStop Color="#FF777777" Offset="1" />
                        <GradientStop Color="#FF3743B6" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="btn_ResetMark" FontSize="12" Click="btn_ResetMark_Click"
                    Foreground="White" Height="20" HorizontalAlignment="Right" Margin="0,226,10,0" VerticalAlignment="Top" Width="74"  
                    Content="Reset" HorizontalContentAlignment="Left" FontFamily="MS Gothic">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF777777" Offset="0" />
                        <GradientStop Color="#FF777777" Offset="1" />
                        <GradientStop Color="#FFEDA481" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>



        </Grid>

        <Grid x:Name="grd_PuzzleSel_L" Margin="0,57,0,53" HorizontalAlignment="Left" Grid.Column="1" Width="184">

            <Button x:Name="btn_OpenPuzzleFileDev" Click="btn_OpenPuzzleFile_Click"   
                Content="File input"
                Width="104" Height="26" VerticalAlignment="Top"
                Foreground="White" HorizontalAlignment="Left" FontSize="12" FontFamily="MS Gothic" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA3A3A3" Offset="0" />
                        <GradientStop Color="Black" Offset="1" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <TextBlock x:Name="txt_FileName" 
                       Margin="2,36,0,0" TextWrapping="Wrap" Text="File(Puzzle DB) path" VerticalAlignment="Top" Height="74" 
                       Foreground="#FFC1C6E2" Background="#FF0A0B16" FontSize="12" FontFamily="MS Gothic"/>

            <Button x:Name="btn_SolvePuzzle" Click="btn_SolvePuzzle_Click"
                    Content="Solve and Marking" Foreground="White" Margin="0,118,0,0" VerticalAlignment="Top" 
                    Width="115" Height="24" HorizontalAlignment="Left" HorizontalContentAlignment="Center" FontSize="12" FontFamily="MS Gothic"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0B0E1F" Offset="1"/>
                        <GradientStop Color="#FF161D6C" Offset="0.5"/>
                        <GradientStop Color="#FF2F231D" Offset="0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Label x:Name="Lbl_onAnalyzing" Content="...." HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontFamily="MS Gothic" Padding="0,0,5,5"/>
            <Label x:Name="lbl_analyzerLap" Content="00:00:00" HorizontalAlignment="Left" Margin="10,164,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="MS Gothic" Padding="0,0,5,5"/>

            <TextBlock x:Name="txblk_AnalyzerResult" Margin="0,192,0,0" TextWrapping="Wrap" Text="Selected" VerticalAlignment="Top" Height="60" Background="#FF10111F" Foreground="White" FontFamily="MS Gothic" Width="184"/>

            <Button x:Name="btn_ClearMark" Click="btn_ClearMark_Click" 
                Content="Clear Mark" Foreground="White" 
                Margin="119,124,0,0" VerticalAlignment="Top" Height="18" HorizontalAlignment="Right"
                HorizontalContentAlignment="Center" FontSize="10" FontFamily="MS Gothic" Width="65"  >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC1B5B5" Offset="0" />
                        <GradientStop Color="#FF41231F" Offset="0.5" />
                        <GradientStop Color="Black" Offset="1" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btn_SavePuzzle" 
                Content=" Save Selected Puzzle"
                Foreground="White" Height="22" HorizontalAlignment="Left" Margin="0,266,0,0" VerticalAlignment="Top" Width="133" FontSize="12" FontFamily="MS Gothic">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFB0B0CA" Offset="0" />
                        <GradientStop Color="#FF0D0D1A" Offset="1" />
                        <GradientStop Color="Black" Offset="0.508" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </Grid>

    </Grid>
</Page>

    