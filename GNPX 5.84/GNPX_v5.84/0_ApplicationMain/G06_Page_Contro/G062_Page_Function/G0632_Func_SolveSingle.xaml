<Page x:Class="GNPX_space.Func_SolveSingle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:app="clr-namespace:GNPX_space"
      xmlns:local="clr-namespace:GNPX_space"

      mc:Ignorable="d"   

      d:DesignWidth="572" d:DesignHeight="428"
      Title="Page1" 
      Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="AutoSolNoDisp" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="130"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FF3A3948" Offset="0" />
                <GradientStop Color="#FF65646F" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Label x:Name="lbl_ShortMessage" 
               Content="lbl_ShortMessage" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="#FF2D0F0F" 
               Visibility="Visible" Panel.ZIndex="6"  FontFamily="MS Gothic" Background="{x:Null}" FontSize="16" Margin="100,0,0,3" Grid.ColumnSpan="3" />


        <Label x:Name="Lbl_onAnalyzing"
               Content="{Binding Resources.Lbl_onAnalyzing, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
               FontSize="12" FontWeight="Normal" Foreground="#FFFF4043"
               HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Grid.Column="1" VerticalContentAlignment="Bottom" />

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,25,0,232" Grid.Column="1" Height="120" VerticalAlignment="Top" >
            <TextBox x:Name="txbxAnalyzerResult" Margin="0" 
                     Background="#FF0A0A24" Foreground="#FFF2F2F2"
                     HorizontalContentAlignment="Stretch"
                     FontFamily="MS Mincho" FontSize="12" TextWrapping="WrapWithOverflow" TextOptions.TextFormattingMode="Display" />
        </ScrollViewer>

        <Label x:Name="lbl_CurrentndifficultyLevel" Content="difficulty : --" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,4,0" VerticalAlignment="Top" Foreground="#FF9BD9EB" Panel.ZIndex="1" FontFamily="MS Gothic" Height="22" Width="110"/>
        <Label x:Name="Lbl_Method"
               Content="{Binding Resources.Lbl_Method, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
               FontSize="12" Foreground="White" Height="24" HorizontalAlignment="Left" Margin="28,146,0,0"  VerticalAlignment="Top" Grid.Column="1" Width="46" />
        <Label x:Name="lbl_AppliedCount"
               Content="{Binding Resources.lbl_AppliedCount, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
               FontSize="12" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,145,2,0" VerticalAlignment="Top" Grid.Column="1" Background="#00000000" OpacityMask="White" Width="58" />
        <Label x:Name="lbl_diffLevel" Grid.Column="1" Content="Level" HorizontalAlignment="Right" Margin="0,148,70,0" VerticalAlignment="Top" Foreground="White" Height="25" Width="40" FontSize="12" FontFamily="MS Gothic"/>


        <DataGrid x:Name="DGView_MethodCounter" 
                  Margin="0,170,0,10" MinWidth="10" MinHeight="14" 
                  MinRowHeight="14" RowHeight="14" MinColumnWidth="12" 
                                            
                  Background="#FF0A0A24" Foreground="White" 
                  RowBackground="#FF0A0A24" 
                  VerticalGridLinesBrush="#FFAFB7EB" 
                  HorizontalGridLinesBrush="#FFAFB7EB" 
                  BorderBrush="#FF4F4F72" 
                                            
                  FontFamily="MS Mincho" FontSize="12" FontStretch="Normal"
                                  	
                  Grid.Column="1" 
                  Grid.IsSharedSizeScope="True" 
                                  	      
                  HeadersVisibility="None" 
                  ItemsSource="{Binding}"                 	
                  
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True" 
                  CanUserReorderColumns="False" 
                  CanUserSortColumns="False" 
                  FrozenColumnCount="2"                              	
                  IsSynchronizedWithCurrentItem="True"                                 
                  IsReadOnly="True" 
                  SelectionMode="Single" >

            <DataGrid.Columns>
                <DataGridTextColumn FontFamily="MS Gothic" Foreground="White" Binding="{Binding methodName}" Width="5*"/>
                <DataGridTextColumn FontFamily="MS Gothic" Foreground="White" Binding="{Binding difficultyLevel}" Width="1*">
                    <DataGridTextColumn.CellStyle>
                        <!-- Unresolved: Write Style in R. ##@@ -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="right" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn FontFamily="MS Gothic" Foreground="White" Binding="{Binding count}" Width="1*">
                    <DataGridTextColumn.CellStyle>
                        <!-- Unresolved: Write Style in R. ##@@ -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="right" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>


            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF0A0A24" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="#FF0A0A24" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <Label x:Name="lbl_Step"
               Content="{Binding Resources.lbl_Step, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
               FontSize="12" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="30,8,40,0" VerticalAlignment="Top" Grid.Column="2" Width="60" HorizontalContentAlignment="Right" />
        <TextBlock x:Name="txbStepCC" TextWrapping="Wrap" Text="00" Width="27" Foreground="White" FontFamily="MS Gothic" FontSize="14" TextAlignment="Center" Margin="0,15,18,0" Grid.Column="2" HorizontalAlignment="Right" Height="15" VerticalAlignment="Top"/>
        <Label x:Name="Lbl_onAnalyzingTS" Content="0 sec" FontSize="12" Foreground="#FFEFF0F8" Margin="0,30,15,0"  VerticalAlignment="Top" FontWeight="Normal" FontFamily="MS Gothic" HorizontalContentAlignment="Right" Grid.Column="2" Height="22" HorizontalAlignment="Right" />
        <Ellipse x:Name="elp_OnWork" HorizontalAlignment="Right" Height="10" Margin="0,54,29,0" Stroke="Black" VerticalAlignment="Top" Width="10" Fill="Red" Grid.Column="2" Visibility="{Binding Visibility.Visible, ElementName=elp_OnWork}" RenderTransformOrigin="0.567,0.7" Panel.ZIndex="3"/>

        <Button x:Name="btn_Solve" Click="btn_Solve_Click" PreviewMouseUp="btn_Solve_PreviewMouseUp"
                      Content="{Binding Resources.btn_Solve, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
                      FontSize="12" Foreground="White" 
    			 	  Margin="10,52,0,0" VerticalAlignment="Top" Width="94" Height="24" HorizontalAlignment="Left"
    			 	  Grid.Column="2" AutomationProperties.HelpText="click or  press hold" ToolTip="click or  press hold" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC1B5B5" Offset="0" />
                    <GradientStop Color="#FF161D6C" Offset="0.5" />
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <!--
        <RepeatButton x:Name="btn_Solve" Click="btn_Solve_Click" PreviewMouseUp="btn_Solve_PreviewMouseUp"
                      Delay="200"
                      Content="{Binding Resources.btn_Solve, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
                      FontSize="12" Foreground="White" 
    			 	  Margin="10,52,0,0" VerticalAlignment="Top" Width="94" Height="24" HorizontalAlignment="Left"
    			 	  Grid.Column="2" AutomationProperties.HelpText="click or  press hold" ToolTip="click or  press hold" >
            <RepeatButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC1B5B5" Offset="0" />
                    <GradientStop Color="#FF161D6C" Offset="0.5" />
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush>
            </RepeatButton.Background>
        </RepeatButton>
        
        -->

        <Button x:Name="btn_ShowMethodList" Click="btn_ShowMethodList_Click"
                Grid.Column="2" Content="M" HorizontalAlignment="Left" Margin="108,52,0,0" VerticalAlignment="Top" Width="20" 
                Height="20" Background="#FF335223" Foreground="#FF77FF6F" />

        <RepeatButton x:Name="btn_Undo" Click="btn_Undo_Click" 
                      Width="94" Height="24" Margin="10,81,0,0" FontSize="12" Foreground="White" 
                      Content="{Binding Resources.btn_Undo, Mode=OneWay, Source={x:Static local:ResourceService.Current}}" 
                      HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2"
                      Interval="20" ToolTip="click or  press hold">
            <RepeatButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF7EA17E" Offset="0" />
                    <GradientStop Color="#FF184818" Offset="0.5" />
                    <GradientStop Color="#FF103810" Offset="1" />
                </LinearGradientBrush>
            </RepeatButton.Background>
        </RepeatButton>

        <Button x:Name="btn_SolveUp" Click="btn_SolveUp_Click" PreviewMouseUp="btn_Solve_PreviewMouseUp"
                Content="{Binding Resources.btn_SolveUp, Mode=OneWay, Source={x:Static local:ResourceService.Current}}" 
                FontSize="12" Foreground="White" Height="24" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" 
                Width="94" Grid.Column="2" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC1B5B5" Offset="0" />
                    <GradientStop Color="#FF161D6C" Offset="0.5" />
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btn_InitialState" Click="btn_AnalyzerResetAll_Click" 
                Content="{Binding Resources.btn_InitialState, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                        
                FontSize="12" Foreground="White" Height="24" HorizontalAlignment="Left" 
                Margin="10,154,0,0"  VerticalAlignment="Top" Width="94" Grid.Column="2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF7EA17E" Offset="0" />
                    <GradientStop Color="#FF184818" Offset="0.5" />
                    <GradientStop Color="#FF103810" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <CheckBox x:Name="chbx_SlowPlayback"  Checked="chbx_SlowPlayback_Checked" Unchecked="chbx_SlowPlayback_Checked"                                             
                Margin="21,178,0,0" Background="White" Foreground="White" IsThreeState="False" HorizontalAlignment="Left" IsChecked="True" 
                FontFamily="MS Gothic" VerticalContentAlignment="Center"  Height="18" VerticalAlignment="Top" FontSize="12" Grid.Column="2" Content="slow playback" />

        <Grid VerticalAlignment="Top" Grid.Column="2" Height="80" Margin="10,210,0,0">
            <CheckBox x:Name="chbx_SetDifficulty" 
                      Content="{Binding Resources.chbx_SetDifficulty, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
                      Margin="0,0,0,0" Background="White" Foreground="White" IsThreeState="False" HorizontalAlignment="Left" IsChecked="False" 
                      FontFamily="MS Gothic" VerticalContentAlignment="Center"  Height="18" VerticalAlignment="Top" Grid.Column="2" FontSize="12" />

            <CheckBox x:Name="chbx_ConfirmMultipleCells"
                      Content="{Binding Resources.chbx_ConfirmMultipleCells, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
                      Margin="0,20,0,0" Foreground="White" IsChecked="True" VerticalAlignment="Top" HorizontalAlignment="Left" 
                      FontFamily="MS Gothic" VerticalContentAlignment="Bottom" Visibility="Visible" BorderBrush="{x:Null}" Width="100" FontSize="12" />

            <CheckBox x:Name="chbx_ShowCandidate" Checked="chbx_ShowCandidate_Checked" Unchecked="chbx_ShowCandidate_Checked" 
                      Content="{Binding Resources.chbx_ShowCandidate, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
                      Margin="0,40,0,0" Foreground="White"  Background="White" HorizontalAlignment="Left" IsChecked="True"
                      VerticalAlignment="Top" FontFamily="MS Gothic" VerticalContentAlignment="Center" FontSize="12"/>

            <CheckBox x:Name="chb_DigitsColoring" Checked="chb_DigitsColoring_Checked" Unchecked="chb_DigitsColoring_Checked"
                      Content="{Binding Resources.chb_DigitsColoring, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                              
                      Margin="10,60,0,0" Background="White" Foreground="White" IsThreeState="False" HorizontalAlignment="Left" 
                      IsChecked="False" FontFamily="MS Gothic" VerticalContentAlignment="Center" Height="18" VerticalAlignment="Top" IsEnabled="False" FontSize="12" />
        </Grid>

        <Grid x:Name="grdColorPad9" VerticalAlignment="Top" HorizontalAlignment="Center" Height="88" Width="114" 
              Background="#FF33375B" Visibility="Visible" Grid.Column="2" Margin="0,295,0,0">

            <Button x:Name="Develp_Close" Click="Develp_Close_Click"
                     Width="16" Height="16" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" 
                     FontFamily="MS Gothic" FontSize="10" VerticalContentAlignment="Top"  Visibility="Visible"/>

            <Image x:Name="imgDevelop" MouseUp="imgDevelop_MouseUp"
                   HorizontalAlignment="Left" Height="36" Margin="10,18,0,0" VerticalAlignment="Top" Width="35" OpacityMask="Black"
                   Source="_DevelopImage.png" />

            <Button x:Name="Develp_Set" Click="Develp_Set_Click"
                    Content="set" HorizontalAlignment="Left" Margin="59,12,0,0" VerticalAlignment="Top" Width="35" Height="15"
                    Foreground="White" FontFamily="MS Gothic" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9B9B9E" Offset="1"/>
                        <GradientStop Color="#FF868686" Offset="0"/>
                        <GradientStop Color="#FF353A5B" Offset="0.489"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="Develp_Reset" Click="Develp_Reset_Click"
                    Content="reset" HorizontalAlignment="Left" Margin="59,34,0,0" 
                    VerticalAlignment="Top" Width="35" Height="15" Foreground="White" FontFamily="MS Gothic" 
                    >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF6B6F6C" Offset="1"/>
                        <GradientStop Color="#FF6B6F6C" Offset="0"/>
                        <GradientStop Color="#FF31543B" Offset="0.493"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <CheckBox x:Name="Develop_multi" Checked="Develop_multi_Checked" Unchecked="Develop_multi_Checked"
                      Content="multi" HorizontalAlignment="Left" Margin="56,55,0,0" 
                      VerticalAlignment="Top" VerticalContentAlignment="Center" Foreground="White" />
        </Grid>
        <Label x:Name="bitmapPath" Content="" HorizontalAlignment="Left" Margin="10,406,0,0" Grid.ColumnSpan="2" VerticalAlignment="Bottom"/>

    </Grid>

</Page>
