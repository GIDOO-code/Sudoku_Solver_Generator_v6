<Page x:Class="GNPX_space.Func_DevelopStatistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GNPX_space"
      xmlns:app="clr-namespace:GNPX_space"
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:GIDOO_space="clr-namespace:GIDOO_space" 
      mc:Ignorable="d"   
      
      d:DesignWidth="572" d:DesignHeight="428"
      Title="Page1"
      Loaded="Page_Loaded"       >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Margin="0,10,2,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FF0C0C16"/>
                <GradientStop Color="#FF434578" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label  x:Name="GNPXGNPX" Content="GNPX v6.1"
                FontFamily="MS Mincho" FontSize="36" Foreground="#FFFEFFFF" HorizontalAlignment="Left" 
                VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Margin="20,20,0,0"/>
        <Button x:Name="btn_devWinClose" Click="btn_devWinClose_Click"
                Content="close" FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="30" HorizontalAlignment="Right" 
                VerticalAlignment="Top" Width="56"  Style="{Binding}" Margin="20,20,20,0">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA575757" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Image x:Name="dev_GBoard" 
               Width="338" Height="338" Margin="10,70,0,0" Stretch="Fill" DataContext="{Binding}" 
               Source="../images/LockedSet3D.png" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <Label x:Name="lblMessafg" Content="Message" Margin="250,20,100,0" VerticalAlignment="Top" Height="50" Foreground="White" Background="#FF323235"/>

        <ScrollViewer Margin="346,75,0,5" HorizontalAlignment="Left" Width="216">
            <DataGrid x:Name="DGViewMethodCounter" MinWidth="10" MinHeight="14" 
                      MinRowHeight="14" RowHeight="14" MinColumnWidth="12" 
                      Background="#FF0A0A24" Foreground="White" RowBackground="#FF0A0A24"
                      VerticalGridLinesBrush="#FFAFB7EB" HorizontalGridLinesBrush="#FFAFB7EB" BorderBrush="#FF4F4F72" 
                                 
                      FontFamily="MS Mincho" FontSize="12" FontStretch="Normal" Grid.IsSharedSizeScope="True" 
                      HeadersVisibility="None" ItemsSource="{Binding}" 
                          	
                      AutoGenerateColumns="False" CanUserResizeColumns="True" CanUserReorderColumns="False" CanUserSortColumns="False" 
                      FrozenColumnCount="2" IsSynchronizedWithCurrentItem="True"                                 
                      IsReadOnly="True" SelectionMode="Single" >

                <DataGrid.Columns>
                    <DataGridTextColumn FontFamily="MS Gothic" Foreground="White" Binding="{Binding methodName}" Width="5*"/>
                    <DataGridTextColumn FontFamily="MS Gothic" Foreground="White" Binding="{Binding difficulty}" Width="1*"/>
                    <DataGridTextColumn FontFamily="MS Gothic" Foreground="White" Binding="{Binding count}" Width="1*"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF0A0A24" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#FF0A0A24" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </ScrollViewer>
    </Grid>


</Page>
