<UserControl x:Class="GIDOO_space.NumericUpDownPlus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GIDOO_space"
             mc:Ignorable="d" Height="30" Width="100" >
    
    <Grid Margin="0,0,0,0" Background="#FFC7CBD6">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="10" Width="1*"/>
            <ColumnDefinition MinWidth="10" Width="20"/>
            <ColumnDefinition MinWidth="10" Width="20"/>
            
        </Grid.ColumnDefinitions>
        <RepeatButton Grid.Column="1" Grid.Row="0" Click="UpButton_Click" BorderThickness="1,1,1,0" Panel.ZIndex="1" Interval="100">
            <Image Source="ImgUp2A.png" Stretch="Fill"/>
        </RepeatButton>
        <RepeatButton Grid.Column="1" Grid.Row="1" Click="DownButton_Click" BorderThickness="1,0,1,1" Panel.ZIndex="1" Interval="100">
            <Image Source="ImgDown2A.png" Stretch="Fill"/>
        </RepeatButton>


        <Button Grid.Column="2" Grid.Row="0" Click="UpButtonP_Click" BorderThickness="1,1,1,0" Panel.ZIndex="1" >
            <Image Source="ImgUp2P.png" Stretch="Fill"/>
        </Button>
        <Button Grid.Column="2" Grid.Row="1" Click="DownButtonP_Click" BorderThickness="1,0,1,1" Panel.ZIndex="1" >
            <Image Source="ImgDown2P.png" Stretch="Fill"/>
        </Button>

        
        
        <TextBox x:Name="textBoxValue" TextChanged="textBoxValue_TextChanged"
                 TextWrapping="Wrap"
                 Foreground="White" FontFamily="MS Gothic" FontSize="12" Background="Black" 
                 TextAlignment="Center" VerticalContentAlignment="Center"
                 Text="{Binding Value, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:NumericUpDownPlus}}}" Grid.RowSpan="2"             />
    </Grid>
</UserControl>
