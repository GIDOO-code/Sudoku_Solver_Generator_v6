<Page x:Class="GNPX_space.Func_Create"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GNPX_space"
      mc:Ignorable="d" 
      d:DesignWidth="572" d:DesignHeight="428"
      Title="Page1" 
      Loaded="Page_Loaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FF0A081A" Offset="0" />
                <GradientStop Color="#FF1B2133" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <Button x:Name="btn_CreateManual" Click="btn_Page_Clicked"
            Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
            Content="{Binding Resources.btn_CreateManual, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
            Foreground="White" BorderBrush="#FF160F7A" FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9EA8ED" Offset="1"/>
                    <GradientStop Color="#FF9EA8ED" Offset="0"/>
                    <GradientStop Color="#FF181F52" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btn_CreateAuto" Click="btn_Page_Clicked"
            Margin="84,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
            Content="{Binding Resources.btn_CreateAuto, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
            Foreground="White" BorderBrush="#FF160F7A" FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9EA8ED" Offset="1"/>
                    <GradientStop Color="#FF0C1133" Offset="0.5"/>
                    <GradientStop Color="#FF9EA8ED" Offset="0"/>

                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btn_CreateAll" Click="btn_Page_Clicked"
            Margin="148,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="24"
            Content="{Binding Resources.btn_CreateAll, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
            Foreground="White" BorderBrush="#FF160F7A" FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5C617E" Offset="1"/>
                    <GradientStop Color="#FF080A1A" Offset="0.5"/>
                    <GradientStop Color="#FF5C617E" Offset="0"/>

                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Grid Background="#FF171A31" Margin="2,28,2,2">
            <Frame x:Name="frame_GNPX_Create"  NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>


</Page>
