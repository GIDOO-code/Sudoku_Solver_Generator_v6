<Page x:Class="GNPX_space.Func_DevelopWHS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GNPX_space"
      xmlns:app="clr-namespace:GNPX_space"
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:GIDOO_space="clr-namespace:GIDOO_space" 
      mc:Ignorable="d"   
      
      d:DesignWidth="572" d:DesignHeight="428"
      Title="Page1"
      Loaded="Page_Loaded"       >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FF0C0C16"/>
                <GradientStop Color="#FF434578" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button x:Name="btn_ReadPuzzle" Click="btn_ReadPuzzle_Click"
                Content="Read Puzzle" FontFamily="MS Gothic" Foreground="White"
                Height="20" HorizontalAlignment="Left" Margin="10,14,0,0"
                VerticalAlignment="Top" Width="132" Style="{Binding}" FontSize="12"  >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#FF7F7E85" Offset="0" />
                    <GradientStop Color="#EA253C92" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Label x:Name="lbl_Messafg" Content="...................." HorizontalAlignment="Left" VerticalAlignment="Top" Width="408" Height="24" Foreground="White" Margin="151,17,0,0" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-2.203"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.462"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Input puzzle file. Same as main Puzzle input." HorizontalAlignment="Left" Margin="18,36,0,0" VerticalAlignment="Top"
               Foreground="White" FontSize="10" Height="21" FontFamily="MS Gothic" Width="239"/>


        <CheckBox x:Name="chbx_ShowCandidate" Checked="chbAnalyze00_Checked" Unchecked="chbAnalyze00_Checked"
                  Content="{Binding Resources.chbx_ShowCandidate, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
                  Foreground="White" Margin="37,56,0,0" Background="White"  IsChecked="True" HorizontalAlignment="Left"             
                  VerticalAlignment="Top" FontFamily="MS Gothic" VerticalContentAlignment="Center" Width="120" FontSize="12"/>

        <CheckBox x:Name="chbx_ShowSolution" Checked="chbx_ShowSolution_Checked" Unchecked="chbx_ShowSolution_Checked"
                            Content="{Binding Resources.chbx_ShowSolution, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
                            FontFamily="MS Mincho" FontSize="12" Foreground="White" 
                            HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="37,76,0,0" 
                             RenderTransformOrigin="8.772,15.83" Width="57" />

        <Button x:Name="btn_Generate_Puzzle_1Removed" Click="btn_Generate_Puzzle_1Removed_Click"
                Content="Generate a puzzle file with one cell/digit removed" FontFamily="MS Gothic" Foreground="White"
                Height="20" HorizontalAlignment="Left" Margin="11,140,0,0" VerticalAlignment="Top" Width="315" Style="{Binding}"  FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#FF7F7E85" Offset="0.005" />
                    <GradientStop Color="#EA421E28" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btnGenerate_Puzzle_12Add" Click="btnGenerate_Puzzle_12Add_Click_1"
                Content="Generate puzzle file with 1-2 cells added" FontFamily="MS Gothic" Foreground="White"
                Height="20" HorizontalAlignment="Left" Margin="11,171,0,0"
                VerticalAlignment="Top" Width="315" Style="{Binding}"  FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#FF7F7E85" Offset="0.005" />
                    <GradientStop Color="#EA0E1634" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Ellipse x:Name="elp_OnWork" 
                 HorizontalAlignment="Left" Height="16" Margin="25,231,0,0" Stroke="Black" VerticalAlignment="Top" Width="15" Fill="Red"/>
        <Button x:Name="btn_SolveContinuously" Click="btn_SolveContinuously_Click"
                Content="Solve using GNPX" FontFamily="MS Gothic" Foreground="White"              
                Height="20" HorizontalAlignment="Left" Margin="44,227,0,0" FontSize="12"
                VerticalAlignment="Top" Width="166" Style="{Binding}"  >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5D4551" Offset="1" />
                    <GradientStop Color="#FF5D4551" Offset="0" />
                    <GradientStop Color="#EA0E1634" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btn_Solve_TryAndError_cont" Click="btn_Solve_TryAndError_cont_Click"
                Content="Solve using TryAndError" FontFamily="MS Gothic" Foreground="White"
                    Height="20" HorizontalAlignment="Left" Margin="44,258,0,0" FontSize="12"
                    VerticalAlignment="Top" Width="168" Style="{Binding}"  >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5D4551" Offset="1" />
                    <GradientStop Color="#FF5D4551" Offset="0" />
                    <GradientStop Color="#EA6B1B47" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="lblDone" Content="..." HorizontalAlignment="Left" Margin="220,223,0,0" VerticalAlignment="Top" Foreground="White" Width="20"/>

        <Button x:Name="btn_SaveBitMap" Click="btn_SaveBitMap_Click"
                Content="Save BitMap" FontFamily="MS Gothic" Foreground="White"
                Height="24" HorizontalAlignment="Left" Margin="434,306,0,0" VerticalAlignment="Top" Width="96" Style="{Binding}" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA0E3417" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>


        <Button x:Name="btn_CharacteristicAnalysis" Click="btn_CharacteristicAnalysis_Click"
                Content="Characteristic Analysis" FontFamily="MS Gothic" Foreground="White"
                Height="20" HorizontalAlignment="Left" Margin="11,104,0,0" 
                VerticalAlignment="Top" Width="204" Style="{Binding}" FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#FF7F7E85" Offset="0" />
                    <GradientStop Color="#EA253C92" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="lbl_fNmae" Content="Input puzzle file. Same as main Puzzle input." HorizontalAlignment="Left" Margin="18,196,0,0" VerticalAlignment="Top" Foreground="White" FontSize="10" Height="20" FontFamily="MS Gothic" Width="239"/>
        <Label x:Name="lblDone_TaE" Content="..." HorizontalAlignment="Left" Margin="220,258,0,0" VerticalAlignment="Top" Foreground="White" Width="20"/>

        <Button x:Name="btn_AnalysisALS" Click="btn_AnalysisALS_Click"
                Content="Find ALS by size. Output to file." FontFamily="MS Gothic" Foreground="White"
                Height="20" HorizontalAlignment="Left" Margin="11,305,0,0"
                VerticalAlignment="Top" Width="230" Style="{Binding}"  FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#FF7F7F7F" Offset="0" />
                    <GradientStop Color="#EA194E17" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Minimum size of ALS" HorizontalAlignment="Left" Margin="26,341,0,0" VerticalAlignment="Top" Height="26" Foreground="White" Width="140"/>
        <GIDOO_space:NumericUpDown x:Name="nUD_ALS_minSize" HorizontalAlignment="Left" Margin="168,346,0,0" VerticalAlignment="Top" 
                                   Value="1" MaxValue="8" FontFamily="MS Gothic" Height="20" Width="60"/>
        <Label Content="ALS plus" HorizontalAlignment="Left" Margin="104,361,0,0" VerticalAlignment="Top" Height="26" 
               Foreground="White" Width="62"/>

        <GIDOO_space:NumericUpDown x:Name="nUD_ALS_plus" HorizontalAlignment="Left" Margin="168,367,0,0" VerticalAlignment="Top" 
                                   Value="0" MaxValue="3" Height="20" Width="60"/>
    </Grid>


</Page>
