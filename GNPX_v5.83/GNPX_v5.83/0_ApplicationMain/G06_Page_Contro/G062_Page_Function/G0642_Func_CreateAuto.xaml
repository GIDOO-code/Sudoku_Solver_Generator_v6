<Page x:Class="GNPX_space.Func_CreateAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:app="clr-namespace:GNPX_space"
      xmlns:local="clr-namespace:GNPX_space"
      xmlns:GIDOO_space="clr-namespace:GIDOO_space"   
      
      d:DesignWidth="572" d:DesignHeight="428"
      Title="Page1" 
      Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Width="572" >
        <Label x:Name="lbl_ShortMessage" 
               Content="lbl_ShortMessage" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="#FF2D0F0F" 
               Visibility="Visible" Panel.ZIndex="6" FontFamily="MS Gothic" Background="{x:Null}" FontSize="16" Margin="143,0,0,0" />

        <local:G611_UC_SBoard x:Name="UC_SBoard"
                            HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="417" Width="220"/>
        <Rectangle HorizontalAlignment="Left" Margin="225,10,0,10" Stroke="#FFC8D7FF" Width="2" Fill="#FF06070C"/>


        <Grid Width="340" HorizontalAlignment="Left" Margin="230,10,0,0" Height="405" >




            <Label Content="Create using GNPX Engine" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="MS Gothic" Background="{x:Null}" Foreground="#FFBDD9DC" Margin="59,18,0,0"/>




            <Grid Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,44,0,0" Height="123" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="94*"/>
                    <ColumnDefinition Width="151*"/>
                </Grid.ColumnDefinitions>



                <Label x:Name="txb_NoOfPuzzlesTitle" 
                   Content="{Binding Resources.lblNoOfPuzzles, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"                                
                   FontFamily="MS Gothic" FontSize="12" FontWeight="Normal" Foreground="White" Margin="0,0,26,0" 
                   VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="52" />

                <TextBox x:Name="txb_NoOfPuzzles" Width="60" Height="20" HorizontalAlignment="Right" Margin="0,1,151,0"
                     Text="0" Background="#FF1F1F50" FontFamily="MS Gothic" Foreground="White" IsReadOnly="True"
                     TextAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" BorderBrush="#FFD1D8ED" Grid.ColumnSpan="2"/>
                <Label Content="/" Height="22" Width="16" FontFamily="MS Gothic" FontWeight="Normal" Foreground="White"
                   HorizontalAlignment="Right" Margin="0,1,132,0" VerticalAlignment="Top" Grid.Column="1" />

                <TextBox x:Name="No_PuzzlesToCreate" Width="60" Height="20" HorizontalAlignment="Right" Margin="0,1,69,0"
                     Background="#FF1F1F50" FontFamily="MS Gothic" Foreground="White"
                     Text="5" TextAlignment="Center" VerticalAlignment="Top" DataContext="{Binding}" VerticalContentAlignment="Center" Grid.Column="1" BorderBrush="#FFD1D8ED"/>
                <CheckBox x:Name="chb_ResultShow" Grid.Column="1" Content="show" HorizontalAlignment="Left" Margin="119,7,0,0" VerticalAlignment="Top" Foreground="#FF93ADE6" FontSize="10" VerticalContentAlignment="Bottom" Checked="chb_ResultShow_Checked" Unchecked="chb_ResultShow_Checked" FontFamily="MS Gothic" IsChecked="True"/>


                <Label x:Name="lbl_PuzzleLevel" Margin="13,26,0,0" Height="28" 
                   Content="{Binding Resources.lbl_PuzzleLevel, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
                   FontFamily="MS Gothic" FontSize="12" FontWeight="Normal" Foreground="White" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="76" />


                <GIDOO_space:NumericUpDown x:Name="nud_Puzzle_LevelLow" ValueChanged="nud_Puzzle_LevelLow_ValueChanged"
                                       MaxValue="20" MinValue="1" Value="1" 
                                       Background="#FF202040" FontFamily="MS Gothic" FontSize="14" Foreground="White" Height="20" HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" Width="62" Margin="88,26,0,0" ToolTip="Select from the method list" Grid.ColumnSpan="2"  />

                <Label x:Name="label32" Content="～" FontFamily="MS Gothic" FontSize="12" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Left" Margin="34,26,0,0"  VerticalAlignment="Top" Height="22" Width="22" Grid.Column="1" />

                <GIDOO_space:NumericUpDown x:Name="nud_Puzzle_LevelHigh" ValueChanged="nud_Puzzle_LevelHigh_ValueChanged"  
                                       Value="3" MaxValue="20" MinValue="1"
                                       Background="#FF202040" FontFamily="MS Gothic" FontSize="14" Foreground="White" Height="20" HorizontalAlignment="Left" Margin="56,26,0,0" 
                                       VerticalAlignment="Top" Width="60" Grid.Column="1" ToolTip="Select from the method list" />


                <Button x:Name="btn_CreatePuzzleAuto" Click="btn_CreatePuzzleAuto_Click"
                    Content="{Binding Resources.btn_CreatePuzzleAuto, Mode=OneWay, Source={x:Static local:ResourceService.Current}}"
                    FontFamily="MS Gothic" FontSize="12" Foreground="White" HorizontalAlignment="Left" 
                    Margin="64,54,0,0" Width="138" Height="26" VerticalAlignment="Top" Grid.ColumnSpan="2">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0.5" />
                            <GradientStop Color="#EA747280" Offset="0" />
                            <GradientStop Color="#EA747280" Offset="1" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button x:Name="btn_ShowMethodList" Click="btn_ShowMethodList_Click"
                Grid.Column="1" Content="M" HorizontalAlignment="Right" Margin="0,60,38,0" VerticalAlignment="Top" Width="20" 
                Height="20" Background="#FF335223" Foreground="#FF77FF6F" />


                <Ellipse x:Name="elp_OnWork" HorizontalAlignment="Right" Height="10" Margin="0,68,68,0" Stroke="Black" VerticalAlignment="Top" Width="14" Fill="#FF84E6D8" Grid.Column="1" Visibility="{Binding Visibility.Visible, ElementName=elp_OnWork}" RenderTransformOrigin="0.567,0.7"/>


                <Label x:Name="Lbl_onAnalyzingMethod"
                   FontSize="12" FontWeight="Normal" Foreground="#FFB1C9FF"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Margin="48,78,0,0" Cursor="" Content="...." Grid.ColumnSpan="2" Width="229" VerticalContentAlignment="Bottom" Padding="5,0,5,0" />
                <Button x:Name="btn_EmergencySave" Click="btn_EmergencySave_Click"
                    Grid.Column="1" Content="E" HorizontalAlignment="Right" Margin="0,61,9,0" VerticalAlignment="Top" Width="20" 
                    Height="20" Background="#FF522E23" Foreground="#66F3210C" FontFamily="MS Gothic"  />

            </Grid>


            <Grid Width="326" VerticalAlignment="Top" Margin="1,168,0,0" HorizontalAlignment="Left" >

                <Label x:Name="Lbl_LSPattern_P0"
                       BorderBrush="#FF5C62A0"  FontFamily="MS Gothic" Foreground="#FFC0C8EB" HorizontalAlignment="Left" 
                       Margin="1,0,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Content="P0" Height="22" Width="21" FontSize="12" />

                <TextBox x:Name="txb_LS_Pattern_Cntrl_P0"  TextChanged="txb_LS_Pattern_Cntrl_P0_TextChanged" 
                         Background="#FF000019" FontFamily="MS Gothic" Foreground="#FF8794F1" Height="18" 
                         HorizontalAlignment="Left" Margin="23,1,0,0" Text="20" 
                         TextAlignment="Center" VerticalAlignment="Top" Width="55" 
                         VerticalContentAlignment="Center" Padding="20,0,0,0" HorizontalContentAlignment="Center" />
                <Label x:Name="Lbl_LS_P0cc"
                    BorderBrush="#FF5C62A0"  FontFamily="MS Gothic" HorizontalAlignment="Left" 
                    Margin="23,0,0,0" VerticalAlignment="Top" Content="P0" Height="22" Background="{x:Null}" Foreground="#FFEB2A2A" />
                <Label x:Name="lbl_LS_P0"
                       Content="Forced pattern change (20-100-)"
                       BorderBrush="#FF5C62A0" FontFamily="MS Gothic" HorizontalAlignment="Left" 
                       Margin="79,3,0,0" VerticalAlignment="Top" 
                       Height="22" Background="{x:Null}" Foreground="#FFC0C8EB" FontSize="12" Padding="5,0,5,0" />
                <Label x:Name="Lbl_LSPattern_P2"
                       BorderBrush="#FF5C62A0"  FontFamily="MS Gothic" Foreground="#FFC0C8EB" HorizontalAlignment="Left" 
                       Margin="1,22,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Content="P2" Height="22" Width="21" FontSize="12" />

                <TextBox x:Name="txb_LS_Pattern_Cntrl_P2"  TextChanged="txb_LS_Pattern_Cntrl_P2_TextChanged" 
                         Background="#FF000019" FontFamily="MS Gothic" Foreground="#FF8794F1" Height="18" 
                         HorizontalAlignment="Left" Margin="23,23,0,0" Text="50" 
                         TextAlignment="Center" VerticalAlignment="Top" Width="55" Padding="20,0,0,0" HorizontalContentAlignment="Center" 
                         VerticalContentAlignment="Center" />
                <Label x:Name="Lbl_LS_P2cc"
                    BorderBrush="#FF5C62A0"  FontFamily="MS Gothic" HorizontalAlignment="Left" 
                    Margin="23,21,0,0" VerticalAlignment="Top" Content="P2" Height="22" Background="{x:Null}" Foreground="#FFEB2A2A" />


                <Label x:Name="lbl_LS_P2" 
                       Content="Generate from the same B12347 (50-3136)"
                       BorderBrush="#FF5C62A0" FontFamily="MS Gothic" HorizontalAlignment="Left" Margin="78,25,0,0" VerticalAlignment="Top" 
                       Height="27" Background="{x:Null}" Foreground="#FFC0C8EB" FontSize="12" Padding="5,0,5,0" />

                <Label x:Name="lbl_LS_P2a" 
                       Content="(3136=56^2)"
                       BorderBrush="#FF5C62A0" FontFamily="MS Gothic" HorizontalAlignment="Left" Margin="222,36,0,0" VerticalAlignment="Top" 
                       Height="22" Background="{x:Null}" Foreground="#FFC0C8EB" FontSize="12" />
            </Grid>



            <Grid Width="315" Margin="15,234,0,7" HorizontalAlignment="Left" >


                <CheckBox x:Name="chbx_FileOutputOnSuccess" Content="Save automatically" HorizontalAlignment="Left" 
                          Margin="4,0,0,0" VerticalAlignment="Top" Foreground="#FFC0C8EB" Height="15" IsChecked="True" Width="135" FontFamily="MS Gothic" FontSize="12" Grid.ColumnSpan="2" VerticalContentAlignment="Bottom" Grid.Column="1"/>

                <CheckBox x:Name="chbx_RandomizingDigits" Checked="chbx_RandomizingDigits_Checked" 
                          Content="Randomize the Digits of Puzzle"
                          BorderBrush="#FF5C62A0" Foreground="White" VerticalAlignment="Top" Margin="4,19,0,0" 
                          HorizontalAlignment="Left" FontFamily="MS Gothic" VerticalContentAlignment="Bottom" Height="14" Grid.ColumnSpan="2" FontSize="12" IsChecked="True" Unchecked="chbx_RandomizingDigits_Checked" Grid.Column="1" Width="210" />
                <Label x:Name="lbl_LS_Parallel" Content="Parallel Info" Margin="6,42,11,0" Foreground="White" FontFamily="MS Gothic" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="121" BorderBrush="#FF6596D4" BorderThickness="1,1,1,1" Panel.ZIndex="1"/>
                <Label x:Name="lbl_EpapsedTimeTS3"
                        Content="Elapsed time :"
                        FontFamily="MS Gothic" FontWeight="Normal" Foreground="White" Height="22" HorizontalAlignment="Right" Margin="0,118,199,0" VerticalAlignment="Top" Panel.ZIndex="1" />
                <TextBlock x:Name="txb_EpapsedTimeTS3" Margin="118,124,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="14" Foreground="White" FontFamily="MS Gothic" HorizontalAlignment="Left" RenderTransformOrigin="0.181,0.57" Width="100" Panel.ZIndex="1">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.532"/>
                            <TranslateTransform X="-0.007" Y="-0.019"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Label x:Name="lbl_ResourceMemory"
                        Content="....." FontFamily="MS Gothic" Margin="10,139,0,0" VerticalAlignment="Top" 
                        Height="24" Background="{x:Null}" Foreground="#FFDEB37D" HorizontalAlignment="Left" Width="250" Panel.ZIndex="1" />
            </Grid>
        </Grid>


    </Grid>

</Page>
