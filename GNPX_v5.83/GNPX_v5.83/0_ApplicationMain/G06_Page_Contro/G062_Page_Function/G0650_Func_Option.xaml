<Page x:Class="GNPX_space.Func_Option"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:properties="clr-namespace:GNPX_space.Properties"
      xmlns:app="clr-namespace:GNPX_space"
      xmlns:local="clr-namespace:GNPX_space"

      mc:Ignorable="d"   

      d:DesignWidth="572" d:DesignHeight="428"
      Title="Page1" 
      Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/RoundCornerButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="205"/>
            <ColumnDefinition Width="395"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FF3A3948" Offset="0" />
                <GradientStop Color="#FF65646F" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>



        <Label x:Name="lbl_PowerUser" 
                Content="PowerUser" FontFamily="MS Gothic" FontSize="12" Foreground="#FF98A4FF" HorizontalAlignment="Right" Margin="0,10,0,0" 
                VerticalAlignment="Top" Height="21" Background="{x:Null}" FontWeight="Bold"/>

        <Button x:Name="btn_PowerUser" Click="btn_PowerUser_Click"
                Content="Power Mode" HorizontalAlignment="Left" Margin="6,11,0,0" 
                VerticalAlignment="Top" Width="86" FontSize="12" Height="20" Opacity="11" Grid.Column="1" FontFamily="MS Gothic" Foreground="#FF98A4FF" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9DA1A9"/>
                    <GradientStop Color="#FF9DA1A9" Offset="1"/>
                    <GradientStop Color="#FF0E1A37" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>





        <Label x:Name="lbl_Langage" BorderBrush="#FF5C62A0" Content="Language" FontFamily="MS Mincho" FontSize="12" Foreground="White" 
               Height="26" HorizontalAlignment="Right" Margin="0,36,394,0" VerticalAlignment="Top" Width="58" Grid.ColumnSpan="2" />

        <Button  x:Name="btn_Langage_English" Content="English" Click="btn_LangageSelect_Click"
                 FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="6,35,0,0" 
                 VerticalAlignment="Top" Width="60" Style="{Binding}" Grid.Column="1" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA575757" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btn_Langage_Japanese" Content="Japanese" Click="btn_LangageSelect_Click"
                FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="73,35,0,0" 
                VerticalAlignment="Top" Width="60" Style="{Binding}" Grid.Column="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA575757" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>




        <Label x:Name="lbl_RandomNumberSeed" 
               Content="{Binding Resources.lbl_RandomNumberSeed, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
               BorderBrush="#FF5C62A0" FontFamily="MS Mincho" FontSize="12" Foreground="White" Height="26" HorizontalAlignment="Right" Margin="0,67,0,0" 
               VerticalAlignment="Top" Width="134" HorizontalContentAlignment="Right" />
        <TextBox x:Name="txb_RandomSeed_000" TextChanged="txb_randomSeed_000_TextChanged" 
                 Background="#FF000019" FontFamily="MS Gothic" FontSize="12" Foreground="White" Height="20" HorizontalAlignment="Left" Margin="5,67,0,0" 
                 Text="0" TextAlignment="Center" VerticalAlignment="Top" Width="90" 
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" />


        <Label x:Name="lbl_SeedSetting" 
               Content="{Binding Resources.lbl_SeedSetting, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
               BorderBrush="#FF5C62A0"  FontFamily="MS Mincho" FontSize="12" Foreground="White" Height="26" HorizontalAlignment="Left"
               Margin="95,69,0,0" VerticalAlignment="Top" Grid.Column="1" Width="142" />


        <Label x:Name="lbl_ProcessorCount" BorderBrush="#FF5C62A0" Content="ProcessorCount:" FontFamily="MS Mincho" FontSize="12" Foreground="White"
               Height="26" HorizontalAlignment="Left" Margin="105,205,0,0" VerticalAlignment="Top" Width="100" />

        <Button x:Name="btn_CopySolution" Click="btn_CopySolution_Click" 
                Content="Copy Solution to Clipboard"
                FontFamily="MS Gothic" Foreground="White" Height="25" HorizontalAlignment="Right" Margin="0,244,0,0" 
                Style="{Binding}" VerticalAlignment="Top" Width="180" FontSize="12" Opacity="0.8" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#EA181B41" Offset="0.5" />
                    <GradientStop Color="#FF7F7E85" Offset="0.0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btn_CopyBitMap" Click="btn_CopyBitMap_Click" 
                Content="{Binding Resources.btn_CopyBitmap, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                FontFamily="MS Gothic" Foreground="White" Height="25" HorizontalAlignment="Right" Margin="0,278,0,0" Style="{Binding}" VerticalAlignment="Top" Width="180" FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#EA0E3417" Offset="0.5" />
                    <GradientStop Color="#FF7F7E85" Offset="0.0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="btn_SaveBitMap" Click="btn_SaveBitMap_Click" 
                Content="{Binding Resources.btn_SaveBitmap, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                FontFamily="MS Gothic" Foreground="White" Height="25" HorizontalAlignment="Right" Margin="0,312,0,0" Style="{Binding}" VerticalAlignment="Top" Width="180" FontSize="12" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA0E3417" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <CheckBox x:Name="chbx_ShowCandidate" Checked="chbx_ShowCandidate_Checked" Unloaded="chbx_ShowCandidate_Checked"
                  Content="{Binding Resources.chbx_ShowCandidate, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"                                              
                  Foreground="White" Margin="5,279,0,0" Background="White"  IsChecked="True" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" FontFamily="MS Gothic" VerticalContentAlignment="Center" Height="15" Width="118" Grid.Column="1" />

        <CheckBox x:Name="chbx_SetAnswer"
                  Content="{Binding Resources.chbx_SetAnswer, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                  Background="White" Foreground="White"
                  IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="MS Mincho" 
                  VerticalContentAlignment="Center" Margin="5,296,0,0" Height="15" Width="62" Grid.Column="1" />

        <CheckBox x:Name="chbx_WhiteBack"
                  Content="{Binding Resources.chbx_WhiteBack, Mode=OneWay, Source={x:Static app:ResourceService.Current}}"
                  Background="White" Foreground="White" 
                  IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="MS Mincho" 
                  VerticalContentAlignment="Center" Margin="5,311,0,0"  Height="20" Width="62" Grid.Column="1" />

        <TextBlock x:Name="texb_bitmapPath" TextWrapping="Wrap" Text="File output path:" Margin="20,347,0,0" VerticalAlignment="Top" 
                   Foreground="White" FontFamily="MS Gothic" Width="535" Height="52" HorizontalAlignment="Left" Grid.ColumnSpan="2" Background="Black"/>
        <Label x:Name="lbl_GNPX_Setting" MouseDown="lbl_GNPX_Setting_MouseDown"
               BorderBrush="#FF5C62A0" Content="GNPX Setting" FontFamily="MS Mincho" FontSize="12" Foreground="White" 
               Height="26" HorizontalAlignment="Right" Margin="0,86,1,0" VerticalAlignment="Top" Width="83" Opacity="0.05" />
        <Button  x:Name="btn_GNPX_Setting" Content="Edit" Click="btn_GNPX_Setting_Click"
            FontFamily="MS Gothic" FontSize="12" Height="22" HorizontalAlignment="Left" Margin="6,88,0,0" 
            VerticalAlignment="Top" Width="60" Style="{Binding}" Grid.Column="1" Opacity="0.4" Foreground="#FF5F8BEF"  >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.8" />
                    <GradientStop Color="#FF7F7E85" Offset="0.05" />
                    <GradientStop Color="#EA747895" Offset="0.55" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>

</Page>
